%form#event_form{:action=>"#{locals[:action]}", :method=>"post",:enctype=>"multipart/form-data", :'accept-charset'=> "UTF-8" }
  %input{:type=>"hidden", :name=>"_method", :value=>locals[:method]}
  %label Basket id:
  =@basket.id
  %br
  %label Basket name
  %input{:type=>"text", :name=>"basket[name]", :value=>@basket.name}
  %br
  %label Basket price
  %input{:type=>"text", :name=>"basket[price]", :value=>@basket.price}
  %br
  %label Basket description
  %textarea{:name=>"basket[description]"}
    =@basket.description
  %br
  -if @basket.reserved? 
    %label Reserved by buyer?
    %input{:type=>"hidden", :name=>"basket[reserved]", :value=>0}
    %input{:type=>"checkbox", :name=>"basket[reserved]", :checked=>(@basket.reserved? ? "checked" : nil) }
    %br
    %label Buyer email
    %input{:type=>"text", :name=>"basket[buyer_email]", :value=>@basket["buyer_email"]}
    %br
    %label Buyer phone
    %input{:type=>"text", :name=>"basket[buyer_phone]", :value=>@basket["buyer_phone"]}
    %br
    %label Received payment from buyer?
    %input{:type=>"hidden", :name=>"basket[received_payment]", :value=>0}
    %input{:type=>"checkbox", :name=>"basket[received_payment]", :checked=>(@basket.received_payment? ? "checked" : nil) }
    %br
    
    %label Notes from client:
    %br
    =h @basket.notes
    %br
  -else
    #not_reserved{:style=>"background:#f4f4f0;"}
      This basket has not been reserved yet!
  %hr
  #basket_books
  %input{:type=>"submit", :value=>locals[:button]}
